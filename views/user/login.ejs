        <label>Login:</label>
        <input type="text" name="login"/><br/>
    </div>
    <div>
        <label>Password:</label>
        <input type="password" name="password"/>
    </div>
    <div>
        <label>Remember:</label>
        <input type="checkbox" name="remember"/>
    </div>
    <div>
        <input type="submit" value="Submit"/>
    </div>
</form>